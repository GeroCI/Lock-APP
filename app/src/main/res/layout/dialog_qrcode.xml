<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="20sp"

        android:textColor="@android:color/holo_green_dark"
        android:text="光交箱信息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@android:color/holo_green_dark" />
    <TextView
        android:id="@+id/onu_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="72dp"
        android:text="光交箱ID："/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/onu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="名称："
            android:textColor="@android:color/holo_green_dark" />
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="150dp"
            android:layout_height="45dp" />

        </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
    <TextView
        android:id="@+id/onu_belonger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="87dp"
        android:text="负责人："/>
    <EditText
        android:id="@+id/edit_belonger"
        android:layout_width="150dp"
        android:layout_height="45dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onu_install_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:text="安装时间："
            android:textColor="@android:color/holo_green_dark" />

        <EditText
            android:id="@+id/edit_text_setupDate"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="     选择日期" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginLeft="150dp"
            android:id="@+id/edit_text_setupTime"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:ems="10"
            android:hint="     选择时间" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <TextView
    android:id="@+id/onu_inwareinfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="72dp"

    android:text="入纤信息："/>
    <EditText
        android:id="@+id/edit_inonu"
        android:layout_width="150dp"
        android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/onu_outwareinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="58dp"
        android:text="出纤芯信息："/>
        <EditText
            android:id="@+id/edit_outonu"
            android:layout_width="150dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/onu_lng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="100dp"
        android:text="经度："/>
        <EditText
            android:id="@+id/edit_lng"
            android:layout_width="150dp"
            android:layout_height="45dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/onu_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="100dp"
        android:text="纬度："/>
            <EditText
                android:id="@+id/edit_lat"
                android:layout_width="150dp"
                android:layout_height="45dp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <TextView
    android:id="@+id/onu_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="72dp"
    android:text="状态信息："/>
        <EditText
            android:id="@+id/edit_status"
            android:layout_width="150dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <TextView
        android:id="@+id/onu_Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="85dp"
        android:text="占用率："/>
        <EditText
            android:id="@+id/edit_rate"
            android:layout_width="150dp"
            android:layout_height="45dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@android:color/holo_green_dark" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
    <Button
        android:id="@+id/onu_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="取消"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/transparent"/>
        <Button
            android:id="@+id/onu_rush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="刷新"
            android:textColor="@android:color/holo_green_dark"
            android:background="@android:color/transparent"/>
    <Button
        android:id="@+id/onu_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传"
        android:textColor="@android:color/holo_green_dark"
        android:background="@android:color/transparent"/>
    </LinearLayout>
</LinearLayout>